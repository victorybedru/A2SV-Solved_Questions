class Solution:
    def isThree(self, n: int) -> bool:
        import math
        
        # Step 1: Check if n is a perfect square
        root = int(math.sqrt(n))
        if root * root != n:
            return False
        
        # Step 2: Check if root is prime
        if root < 2:
            return False
        
        for i in range(2, int(root**0.5) + 1):
            if root % i == 0:
                return False
        
        return True
